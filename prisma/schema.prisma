generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id           String       @id @default(cuid())
  name         String?
  email        String       @unique
  passwordHash String
  image        String?
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt
  threads      ChatThread[]
}

model Job {
  id          String       @id @default(cuid())
  title       String
  company     String
  location    String?
  description String
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  threads     ChatThread[]
}

model ChatThread {
  id        String        @id @default(cuid())
  userId    String?
  jobId     String?
  title     String?
  createdAt DateTime      @default(now())
  messages  ChatMessage[]
  job       Job?          @relation(fields: [jobId], references: [id])
  user      User?         @relation(fields: [userId], references: [id])
}

model ChatMessage {
  id        String     @id @default(cuid())
  threadId  String
  sender    String
  text      String
  createdAt DateTime   @default(now())
  feedback  Boolean    @default(false)
  rating    Int?
  company   String?
  thread    ChatThread @relation(fields: [threadId], references: [id])
}

model PageContent {
  id        String   @id @default(cuid())
  source    String
  url       String
  title     String?
  content   String
  createdAt DateTime @default(now())
}

model CompanyStats {
  id               String   @id @default(cuid())
  company          String   @unique
  candidatesActive Int
  companyViews     Int
  updatedAt        DateTime @updatedAt
}
